<%# display a new random grid and a form. the form will be submitted to the score action</p> %>
  <h1>New game</h1>
<div class="container">
  <ul>
    <% @letters.each do |letter| %>
      <li><%= letter.capitalize %></li>
    <% end %>
  </ul>
</div>
    <label for="word">What is the longest word you can find?</label>
<div class="container">
  <form method="post" action="score">
    <input type="text" name="word" class="form-control">
    <input type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>